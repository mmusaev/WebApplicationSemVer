@model List<WebApplicationSemVer.Models.ProductOrderViewModel>
@{
    ViewBag.Title = "Home Page";
}

<main>
    <section class="row" aria-labelledby="ordersTitle">
        <h1 id="ordersTitle">Product Orders</h1>
        <p class="lead">View all customer orders with product information from our in-memory databases.</p>
    </section>

    <div class="row">
        <div class="col-md-12">
            <h2>Order History</h2>
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Product</th>
                        <th>Category</th>
                        <th>Unit Price</th>
                        <th>Quantity</th>
                        <th>Total Price</th>
                        <th>Order Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td><strong>#@order.OrderId</strong></td>
                            <td>@order.CustomerName</td>
                            <td>@order.ProductName</td>
                            <td><span class="badge bg-secondary">@order.Category</span></td>
                            <td>$@order.Price</td>
                            <td><span class="badge bg-info text-dark">@order.Quantity</span></td>
                            <td><strong>$@order.TotalPrice</strong></td>
                            <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                @if (order.Status == "Delivered")
                                {
                                    <span class="badge bg-success">@order.Status</span>
                                }
                                else if (order.Status == "Shipped")
                                {
                                    <span class="badge bg-primary">@order.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">@order.Status</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-light">
                        <td colspan="6" class="text-end"><strong>Total Orders:</strong></td>
                        <td colspan="3"><strong>@Model.Count</strong></td>
                    </tr>
                    <tr class="table-light">
                        <td colspan="6" class="text-end"><strong>Grand Total:</strong></td>
                        <td colspan="3"><strong>$@Model.Sum(o => o.TotalPrice)</strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <h3>Order Statistics</h3>
            <div class="row">
                <div class="col-md-3">
                    <div class="card bg-primary text-white mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Total Orders</h5>
                            <p class="card-text display-6">@Model.Count</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Delivered</h5>
                            <p class="card-text display-6">@Model.Count(o => o.Status == "Delivered")</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Shipped</h5>
                            <p class="card-text display-6">@Model.Count(o => o.Status == "Shipped")</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-dark mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Processing</h5>
                            <p class="card-text display-6">@Model.Count(o => o.Status == "Processing")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>